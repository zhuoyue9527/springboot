<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.zhuo.mapper.AreaMapper">

    <resultMap id = "result" type = "com.zhuo.entity.Area">
        <result property = "areaId" column = "area_id"/>
        <result property = "areaName" column = "area_name"/>
        <result property = "priority" column = "priority"/>
        <result property = "createTime" column = "create_time"/>
        <result property = "lastEditTime" column = "last_edit_time"/>
    </resultMap>
    
    
    <select id = "findAreaAll" resultMap = "result">
        SELECT * FROM tb_area ;
    </select>
    
    <select id="queryArea" resultMap="result">
    	select * from tb_area
    	order by priority DESC;
    </select>
    
     <select id="getAreaById" resultMap="result">
    	select * from tb_area 
    	where area_id =#{areaId}
    </select>
    
    <insert id="insertArea" useGeneratedKeys="true" keyProperty="areaId" keyColumn="area_id"
    		parameterType="com.zhuo.entity.Area">
    		insert into tb_area(area_name,priority,create_time,last_edit_time)
    		values (#{areaName},#{priority},#{createTime},#{lastEditTime})
    </insert>
    
    <update id="updateArea" parameterType="com.zhuo.entity.Area" >
    	update tb_area
    	<set>
    		<if test="areaName!=null">area_name=#{areaName},</if>
    		<if test="priority">priority=#{priority},</if>
    		<if test="lastEditTime">last_edit_time=#{lastEditTime}</if>
    	</set>
    	where area_id=#{areaId}
    </update>
    
    <delete id="deleteArea" >
     	delete from tb_area where area_id = #{area_id}
    </delete>
     
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
</mapper>